{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2015",
      "esnext"
    ],
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist/",
    "removeComments": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@reactblog/core/*": [
        "../reactblog-core/src/*"
      ],
      "@reactblog/node/*": [
        "../reactblog-node/src/*"
      ],
      "@reactblog/ui/*": [
        "../reactblog-ui/src/*"
      ],
      "Application/*": [
        "../reactblog-web/src/application/*"
      ],
      "Services/*": [
        "../reactblog-web/src/application/services/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "files": [
    "custom.d.ts"
  ],
  "include": [
    "custom.d.ts",
    "src/**/*",
    "webpack.config.ts"
  ]
}
